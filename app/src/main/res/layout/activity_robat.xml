<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lancer.wechat.RobatActivity">

    <include layout="@layout/common_chat" />
    <!--android:divider="@null"去掉listview的横线-->
    <ListView
        android:id="@+id/lv_robat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:transcriptMode="alwaysScroll" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C2C2C2" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F0F0F0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_robat_voice"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/chatting_setmode_voice_btn_normal" />

        <EditText
            android:id="@+id/et_robat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <ImageView
            android:id="@+id/iv_robat_emoji"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/emoji" />

        <ImageView
            android:id="@+id/iv_robat_plus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/circle_plus" />


    </LinearLayout>
</LinearLayout>
